<?xml version="1.0"?>
<dto xmlns="micro:dto-01"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="micro:dto-01 https://raw.githubusercontent.com/Micro-PHP/dto/master/src/Resource/schema/dto-01.xsd">
    <class name="Category\Category">
        <property name="uuid" type="string" required="true"/>
        <property name="name" type="string" required="true"/>
        <property name="parent" type="Category/Category"/>
    </class>

    <class name="Category\CategoryCreate">
        <property name="name" type="string" required="true"/>
        <property name="parentUuid" type="string" required="false"/>
    </class>

    <class name="Category\CategorySearchCriteria">
        <property name="name" type="string" required="true"/>
        <property name="parentUuid" type="string" required="false"/>
    </class>

    <class name="Category\CategoryGetRequest">
        <property name="uuid" type="string" required="true" />
        <property name="flag" type="integer" required="false"/>
    </class>

    <class name="Category\CategoryGetResponse">
        <property name="category" type="Category\Category" required="true" />
        <property name="flag" type="integer" required="false"/>
    </class>

</dto>